<% include partials/header %>

	<div class="ui segment container main text">
			<h1 class="ui huge header centered"><%= actor.name %> (<%= actor.age %> years)</h1>
			<div class="ui top attached">
				<div class="item">
					<img class="ui rounded centered image" src="<%= actor.image %>">
					<div class="content">
						<p><%= actor.description %></p>
					</div>
					<div class="utilities">
						<a class="ui blue button right floated" href="/actors/<%= actor._id %>/edit">Edit</a>
						<form class="left floated" action="/actors/<%= actor._id %>?_method=DELETE" method="POST">
							<input class="ui red button" type="submit" value="Delete">
						</form>
					</div>
				</div>
			</div>
	</div>

<% include partials/footer %>