<% include partials/header %>

<div class="ui container main text">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% posts.forEach(function(post) { %>
				<div class="item">
					<div class="image">
						<img class="image" src="<%= post.image %>">
					</div>
					<div class="content">
						<a class="header" href="/posts/<%= post._id %>"><%= post.title %></a>
						<div class="meta">
							<!-- substring limits the amount of characters that will show -->
							<span><%= post.created.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- post.body.substring(0, 150) %>...</p>
						</div>
						<div class="extra">
							<a class="ui purple inverted button" href="/posts/<%= post._id %>">
							Read More
							<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>
</div>

<% include partials/footer %>