<% include partials/header %>

<div class="ui main container text segment clearfix">
	<div class="ui huge header">Edit <em><%= post.title %></em> Post</div>
	<form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="post[title]" value="<%= post.title %>">
		</div>
		<div class="field">
			<label>Image Url</label>
			<input type="url" name="post[image]" value="<%= post.image %>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="post[body]" placeholder="Content"><%= post.body %></textarea>
		</div>
		<div>
			<input class="ui green big inverted button right" type="submit" value="Update">
			<a class="ui red big inverted button left" href="/posts/<%= post._id %>">Go Back</a>
		</div>
	</form>
</div>

<% include partials/footer %>