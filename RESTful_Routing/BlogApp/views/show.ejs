<% include partials/header %>

<div class="ui text segment container main clearfix">
	<div class="ui huge header"><%= post.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= post.image %>">
			<div class="content">
				<span><%= post.created.toDateString() %></span>
			</div>
			<div class="description">
				<!-- the "<%- %>" ejs tag render the html code that was passed in -->
				<p><%- post.body %></p>
			</div>
			<div class="utilities">
				<a class="ui blue big inverted button right" href="/posts/<%= post._id %>/edit">Edit</a>
				<form class="left" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
					<input class="ui red big inverted button" type="submit" value="Delete">
				</form>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>