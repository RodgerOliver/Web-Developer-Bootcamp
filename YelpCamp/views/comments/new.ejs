<% include ../partials/header %>

<div class="container" style="margin-top: 30px;">
	<h1 style="text-align: center;">Add a New Comment to <%= camp.name %> Camp</h1>
	<div style="margin: 25px auto; width: 333px;">
		<form action="/camps/<%= camp._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="Author" required>
			</div>
			<div class="form-group">
				<textarea class="form-control" name="comment[text]" placeholder="Comment" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
			</div>
		</form>
		<a href="/camps/<%= camp._id %>">Cancel</a>
	</div>
</div>

<% include ../partials/footer %>