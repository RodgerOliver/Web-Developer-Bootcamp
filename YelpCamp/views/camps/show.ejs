<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<a class="list-group-item active" href="#">Info 1</a>
				<a class="list-group-item" href="#">Info 2</a>
				<a class="list-group-item" href="#">Info 3</a>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<img class="card-img-top" src="<%= camp.image %>">
				<div class="card-body">
					<div class="row">
						<h5 class="card-title col-md-6 text-left"><a href="#"><%= camp.name %></a></h5>
						<p class="card-text col-md-6 text-right font-weight-bold">$9.00/night</p>
					</div>
					<p class="card-text"><%= camp.description %></p>
				</div>
				<div class="card-footer">
					<div class="text-right">
						<a class="btn btn-success" href="/camps/<%= camp._id %>/comments/new"> Add Comment</a>
					</div>
					<hr>
					<% camp.comments.forEach(function(comment) { %>
					<div class="row">
						<div class="col-md-12">
							<span class="right text-muted">10 days ago</span>
							<p class="card-text"><strong><%= comment.author %></strong></p>
							<p><%= comment.text %></p>
						</div>
					</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>